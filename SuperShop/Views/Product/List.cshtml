@model ICollection<SuperShop.Models.EntityModels.Product>

<div class="card-body">
    <h1>Product List</h1>
    <table class="table table-bordered table-hover table-responsive">
        <thead>
            <tr>
                <th>Name</th>
                <th>Code</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Name</td>
                    <td>@product.Code</td>
                    <td>@product.Quantity</td>
                    <td>@product.Price</td>
                    <td>
                        <a asp-controller="Customer" asp-action="Edit" asp-route-id="@product.Id" class="btn btn-primary">Edit</a>
                    </td>
                    <td>
                        <a asp-controller="Customer" asp-action="Delete" asp-route-id="@product.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
