@model ChangePasswordViewModel
@{
    ViewBag.Title = "Change Password";
}


<div class="card">
    <div class="card-header">
        <h1>Change Password</h1>
    </div>
    <div class="card-body">
        <form method="post">
            <div class="form-group">
                <label asp-for="CurrentPassword">Current Password</label>
                <input type="password" asp-for="CurrentPassword" class="form-control" />
                <span asp-validation-for="CurrentPassword" class="alert-danger"></span>
            </div>
            <div class="form-group">
                <label for="NewPassword">New Password</label>
                <input type="password" asp-for="NewPassword" class="form-control" />
                <span asp-validation-for="NewPassword" class="alert-danger"></span>
            </div>
            <div class="form-group">
                <label for="ConfirmPassword">ConfirmPassword</label>
                <input type="password" asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="alert-danger"></span>
            </div>
            <div>
                <input type="submit" value="Update" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>