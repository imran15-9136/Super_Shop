@model CustomerCreateViewModel
@{ 
    ViewBag.Title="Customer Create";
}


<div class="card">
    <div class="card-header">
        <h1>Customer Create</h1>
    </div>
    <div class="card-body">
        <form enctype="multipart/form-data" method="post">
            <div class="form-group">
                <label for="Name">Name</label>
                <input type="text" asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="alert-danger"></span>
            </div>
            <div class="form-group">
                <label for="Phone">Phone</label>
                <input type="text" asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="alert-danger"></span>
            </div>
            <div class="form-group">
                <label for="Email">Email</label>
                <input type="email" asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="alert-danger"></span>
            </div>
            <div class="form-group">
                <label for="Address">Address</label>
                <input type="text" asp-for="Address" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Photo" class="control-label"></label>
                <input type="file" id="files" asp-for="Photo" class="form-control" />
            </div>
            <div>
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
            @*@section Scripts{ 
            <script>

            </script>
            }*@
        </form>
    </div>
</div>

