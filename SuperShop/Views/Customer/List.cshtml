@model IEnumerable<Customer>

@{
    ViewBag.Title = "Customer List";
}

<h1>List</h1>
<p>
    <a asp-action="Create" class="btn-btn-block">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @item.Name
            </td>
            <td>
                @item.Phone
            </td>
            <td>
                @item.Email
            </td>
            <td>
                @item.Address
            </td>
            <td>
                <a asp-controller="Customer" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a> |
                <a asp-controller="Customer" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                @*@Html.ActionLink("View","edit","customer", new { id=item.Id});
                <a href="@Url.Action("edit","customer", new { id=item.Id});" class="btn btn-primary">Edit</a>*@
                
            </td>
        </tr>
}
    </tbody>
</table>
